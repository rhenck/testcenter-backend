<?xml version="1.0" encoding="utf-8"?>
<xs:schema id="vo_Booklet"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    elementFormDefault="qualified">

  <xs:complexType name="MetadataType">
    <xs:all>
      <xs:element name="Id" type="xs:ID" minOccurs="0" maxOccurs="1"/>
      <xs:element name="Label" type="xs:string" minOccurs="1" maxOccurs="1"/>
      <xs:element name="Description" type="xs:string" minOccurs="0" maxOccurs="1"/>
      <xs:element name="Owner" type="xs:string" minOccurs="0" maxOccurs="1"/>
      <xs:element name="Lastchange" type="xs:dateTime" minOccurs="0" maxOccurs="1"/>
      <xs:element name="Status" type="xs:string" minOccurs="0" maxOccurs="1"/>
      <xs:element name="Project" type="xs:string" minOccurs="0" maxOccurs="1"/>
    </xs:all>
  </xs:complexType>

  <!-- ###################################################################-->
  <xs:complexType name="ConfigType">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="parameter" type="xs:string"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <!-- ###################################################################-->
  <xs:complexType name="UnitType">
    <xs:attribute name="id" type="xs:ID" use="required"/>
    <xs:attribute name="label" type="xs:string" use="required"/>
    <xs:attribute name="labelshort" type="xs:string"/>
    <xs:attribute name="alias" type="xs:string"/>
  </xs:complexType>

  <!-- ###################################################################-->
  <xs:complexType name="TestletRestrictionsType">
    <xs:all>
      <xs:element name="TimeMax" type="ConfigType" minOccurs = "0" maxOccurs="1"/>
      <xs:element name="CodeToEnter" type="ConfigType" minOccurs = "0" maxOccurs="1"/>
    </xs:all>
  </xs:complexType>

  <!-- ###################################################################-->
  <xs:group name="unitOrTestlet">
    <xs:choice>
      <xs:element name="Unit" type="UnitType" minOccurs = "1" maxOccurs="unbounded"/>
      <xs:element name="Testlet" type="TestletType" minOccurs = "1" maxOccurs="unbounded"/>
    </xs:choice>
  </xs:group>

  <!-- ###################################################################-->
  <xs:complexType name="TestletType">
    <xs:sequence>
      <xs:element name="Restrictions" type="TestletRestrictionsType" minOccurs="0" maxOccurs="1"/>
      <xs:choice>
        <xs:element name="Unit" type="UnitType" minOccurs = "1" maxOccurs="unbounded"/>
        <xs:group ref="unitOrTestlet" minOccurs = "1" maxOccurs="unbounded"/>
      </xs:choice>
    </xs:sequence>
    <xs:attribute name="id" type="xs:string" />
    <xs:attribute name="label" type="xs:string" />
  </xs:complexType>

  <!-- ###################################################################-->
  <!-- ###################################################################-->

  <xs:element name="Booklet">
    <xs:complexType>
      <xs:all>
        <xs:element name="Metadata" type="MetadataType" minOccurs="1" maxOccurs="1"/>
        <xs:element name="BookletConfig" minOccurs="0" maxOccurs="1">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Config" minOccurs="1" maxOccurs="unbounded">
                <xs:complexType>
                <xs:simpleContent>
                  <xs:extension base="xs:string">
                    <xs:attribute name="key" type="xs:ID" use="required"/>
                  </xs:extension>
                </xs:simpleContent>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="Units" type="TestletType" minOccurs="1" maxOccurs="1"/>
      </xs:all>
    </xs:complexType>
    <xs:unique name="BookletConfigKey">
      <xs:selector xpath="Config"/>
      <xs:field xpath="@key"/>
    </xs:unique>
  </xs:element>
</xs:schema>
